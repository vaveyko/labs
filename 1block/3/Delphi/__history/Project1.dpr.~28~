Program Project1;

Uses
    System.SysUtils;

Const
    MINVALUE = 0;
    MAXVALUE = 1000000;

Var
    LenOfNum, Num: Integer;
    IsCorrect: Boolean;

Begin
    IsCorrect := True;
    Num := 0;
    LenOfNum := 0;
    Writeln('Программа считает количество цифр в натуральном числе n');
    Repeat
        IsCorrect := True;
        Try
            Writeln('Введите натуральное число');
            Readln(Num);
        Except
            Writeln('Неправильные входные данные');
            IsCorrect := False;
        End;
        If IsCorrect Then
        Begin
            If (Num < MINVALUE+1) Or (Num > MAXVALUE) Then
            Begin
                Writeln('Число должно быть больше ', MINVALUE, ' и меньше ', MAXVALUE);
                IsCorrect := False;
            End;
        End;
    Until IsCorrect;
    While (Num > 0) Do
    Begin
        LenOfNum := LenOfNum + 1;
        Num := Num Div 10;
    End;
    Writeln('Длинна числа -- ', LenOfNum);
    Readln;

End.
