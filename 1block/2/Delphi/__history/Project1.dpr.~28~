Program Task2Block1;

Uses
    System.SysUtils;

Const
    MIN = 2;
    MAX = 15;

Var
    CountNum, I: Integer;
    MultipliedNum: Int64;
    IsCorrect: Boolean;

Begin
    IsCorrect := true;
    CountNum := 0;
    MultipliedNum := 2;
    Writeln('Эта программа считает произведение 2*4*6*...*2n для заданного n');
    Writeln('Число n должно быть от ', MIN, ' и до ', MAX);
    Repeat
    Begin
        Writeln('Введите число');
        Try
            Readln(CountNum);
            IsCorrect := True
        Except
            Writeln('Неправильные входные данные');
            IsCorrect := False;
        End;
        If IsCorrect And ((CountNum < MIN) Or (CountNum > MAX)) Then
        Begin
            Writeln('Число n должно находиться в промежутке [', MIN, ', ', MAX, ']');
            IsCorrect := False;
        End
    End;
    Until IsCorrect;
    Write(MultipliedNum);
    For I := MIN To CountNum Do
    Begin
        Write(' * ', 2 * I);
        MultipliedNum := MultipliedNum * 2 * I;
    End;
    Writeln(' = ', MultipliedNum);
    Readln;

End.
